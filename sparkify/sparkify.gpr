with "asis_bld";
with "common";

project Sparkify extends "tools/tool_utils/tool_utils" is

   type Bld_Type is
      ("prod", "debug", "prod_strict", "prod_no_checks");
   type Os_Type is
      ("default_Unix", "powerpc_aix", "pa_hpux");
   for Main use ("asis_ul-several_files_driver.adb");
   Bld : Bld_Type := external ("BLD");

   package Builder is
      for Default_Switches ("ada") use Common.Builder'Default_Switches ("ada");
      for Executable ("asis_ul-several_files_driver.adb") use "sparkify";
   end Builder;

   package Binder renames Common.Binder;

   package Ide renames Common.Ide;

   package Compiler is

      case Bld is

         when "prod" =>

         when "debug" =>
            for Default_Switches ("ada") use ("-gnat2012");

         when "prod_strict" =>

         when "prod_no_checks" =>

      end case;
   end Compiler;

end Sparkify;

