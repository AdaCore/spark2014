#!/usr/bin/env python
"""./run-tests [options] [test name]

Run the HI-LITE testsuite
"""

# This is a wrapper to test_hilite.py; it initializes the environment before
# launching the testsuite.

from lib.python.test_hilite import run_testsuite
from gnatpython.env import Env

import os

root = os.getcwd()
env = Env()
python_lib = os.path.join(root,"lib","python")
env.add_search_path("PYTHONPATH", python_lib)

if __name__ == "__main__":
    try:
        run_testsuite(python_lib + '/run-test')
    except AssertionError, e:
        print 'ERROR: %s' % e

