project Test is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("main_indefinite_stacks.adb", "main_indefinite_stacks.adb", "main_stacks.adb", "main_unbounded_stacks.adb");

   package Compiler is
      for Default_Switches ("ada") use ("-gnat12", "-gnata", "-gnatyg", "-g");
   end Compiler;

   package Ide is
      for Vcs_Kind use "Git";
   end Ide;

   package Builder is
      for Default_Switches ("ada") use ("-g");
   end Builder;

   package Check is
      for Default_Switches ("ada") use ("-d");
   end Check;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

end Test;

